{
    "name": "justbetter/statamic-image-optimize",
    "description": "Image optimization after upload",
    "type": "package",
    "license": "MIT",
    "keywords": [
        "justbetter",
        "asset-uploads"
    ],
    "authors": [
        {
            "name": "Kevin Meijer",
            "email": "kevin@justbetter.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-fileinfo": "*",
        "statamic/cms": "^4.0",
        "laravel/framework": "^10.0",
        "league/glide": "^2.2"
    },
    "require-dev": {
        "laravel/pint": "^1.1",
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "JustBetter\\ImageOptimize\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustBetter\\ImageOptimize\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "style": "pint --test"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    },
    "extra": {
        "statamic": {
            "name": "Image Optimize",
            "description": "Image optimization after upload"
        },
        "laravel": {
            "providers": [
                "JustBetter\\ImageOptimize\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
